#! /usr/bin/make -f
# vim:syntax=make

export DH_VERBOSE=1

CXXFLAGS += -DNDEBUG=1
CXXFLAGS += -g

configure: configure-stamp
configure-stamp:
	cmake \
		-DCMAKE_BUILD_TYPE=release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DSYSCONFDIR=/etc/x0 \
		-DINCLUDEDIR=/usr/include \
		-DLIBDIR=/usr/lib \
		-DPLUGINDIR=/usr/lib/xzero \
		-DLOGDIR=/var/log/x0d \
		\
		-DLLVM_CONFIG_EXECUTABLE=/usr/bin/llvm-config-3.0 \
		-DCMAKE_CXX_FLAGS="$(CXXFLAGS)" \
		-DCMAKE_VERBOSE_MAKEFILE=OFF \
		\
		-DBUILD_TESTS=OFF \
		-DENABLE_EXAMPLES=OFF \
		-DENABLE_WEBDAV=OFF \
		-DENABLE_RRD=OFF \
		-DENABLE_IMAGEABLE=OFF \
		\
		-DWITH_ACCEPT4=ON \
		-DWITH_PCRE=ON \
		-DWITH_MYSQL=ON \
		-DWITH_SSL=ON \
		-DWITH_TCP_DEFER_ACCEPT=ON
	touch $@

# XXX we disabled some plugins (rrd, iamgeable, webdav, ...) as they're not meant for release yet

build: build-stamp
build-stamp: configure-stamp
	dh_testdir
	$(MAKE)
	touch $@

install: install-stamp
install-stamp:
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	$(MAKE) install DESTDIR=$(CURDIR)/debian/tmp
	mkdir -p $(CURDIR)/debian/tmp/etc/init
	cp $(CURDIR)/debian/x0d.upstart $(CURDIR)/debian/tmp/etc/init/x0d.conf
	touch $@

binary-indep: build install
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_install
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-arch binary-indep

clean:
	dh_testdir
	dh_testroot
	dh_clean
	#dh_auto_clean

%:
	dh $@

.PHONY: configure build binary-indep binary-arch binary install clean
